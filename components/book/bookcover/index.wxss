.ty-bcover {
  line-height: 40rpx;
  padding: 41rpx 20rpx 34rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx #f5f5f5 solid;
}

.ty-bcover-img {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
}

.ty-bcover-title {
  font-size: 38rpx;
  margin: 27rpx 0 8rpx;
}

.ty-bcover-authors {
  display: flex;
  flex-direction: column;
  color: #999;
}