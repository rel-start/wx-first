.ty-infobox {
  border-top: 20rpx #f5f5f5 solid;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 25rpx 60rpx 20rpx;
  box-sizing: border-box;
}

.ty-infobox__head {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #292929;
  line-height: 40rpx;
  margin: 25rpx 0 15rpx;
}

.ty-infobox__body {
  position: relative;
}