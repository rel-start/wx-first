.my-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  width: 750rpx;
  height: 573rpx;
  display: flex;
  padding-top: 254rpx;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
}

.header-bg {
  width: 750rpx;
  height: 573rpx;
  position: absolute;
  z-index: 0;
  top: 0;
  left: 0;
}

.header__body {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  background-color: #999;
  border-radius: 50%;
  color: #fff;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}

.login-txt {
  width: 65rpx;
  line-height: 1.2;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.users {
  font-size: 24rpx;
  line-height: 52rpx;
  margin-bottom: 24rpx;
}

.likes-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.likes__head {
  width: 97rpx;
  height: 42rpx;
  margin: 30rpx 0 20rpx;
}

.likes__body {
  display: flex;
  padding: 0 15rpx;
  flex-wrap: wrap;
  flex-direction: row;
  overflow: hidden;
}

.card {
  margin: 0 15rpx 30rpx;
}

.noLikes {
  font-size: 30rpx;
  color: #999;
}