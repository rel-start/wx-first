@import '../classic.wxss';

.music-exhibition {
  display: flex;
  justify-content: center;
  align-items: center;
}

.music-cd {
  position: relative;
  width: 422rpx;
  height: 422rpx;
}

.cd-animation {
  animation: cd-rotate 5s infinite;
  -webkit-animation: cd-rotate 5s linear infinite;
}

@keyframes cd-rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
@-webkit-keyframes cd-rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.music-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.player-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: calc(50% - 60rpx);
  left: calc(50% - 60rpx);
}